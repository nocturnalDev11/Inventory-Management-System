<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Inventory_Management_System.AppShell"
       xmlns:local="clr-namespace:Inventory_Management_System"
       xmlns:pages="clr-namespace:Inventory_Management_System.Pages">
    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />
    <ShellContent Title="Inventory List"
                  ContentTemplate="{DataTemplate pages:ItemListPage}"
                  Route="ItemListPage" />
    <ShellContent Title="Add Item"
                  ContentTemplate="{DataTemplate pages:AddItemPage}"
                  Route="AddItemPage" />
</Shell>